<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dip"
    android:layout_marginEnd="15dip"
    android:layout_marginBottom="20dip"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:theme="@style/Theme.EWalleKT"
        app:cardBackgroundColor="@color/cards_background_color"
        app:cardCornerRadius="12dip"
        app:cardElevation="0dip"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="2dip">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/service_image"
                android:layout_width="22dip"
                android:layout_height="22dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/service_name"
        android:layout_width="match_parent"
        android:layout_height="22sp"
        android:layout_marginTop="6dip"
        android:fontFamily="@font/avenir_next"
        android:inputType="textMultiLine"
        android:text="Service Name"
        android:textAlignment="center"
        android:textColor="#7B7F9E"
        android:textSize="10sp" />
</LinearLayout>